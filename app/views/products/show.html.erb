<% title(@product.name, "Products") %>

<header>
  <h2><%= @product.name %>: <%= @product.quantity %></h2>  

  <ul class="actions">
    <li><%= link_to "Edit Product", edit_product_path(@product),
        class: "edit" %></li>

    <li><%= link_to "Delete Product", product_path(@product),
        method: :delete, data: { confirm: "Are you sure you want to delete this product?" },
        class: "delete" %></li>    
  </ul>
</header>

<header>
  <h2>Notes</h2>
    <ul class="actions">
      <li>
        <%= link_to "New Note", new_product_note_path(@product), class: "new" %>          
      </li>
      <li>
        <%= link_to "Add New Product", new_product_path(@product), class: "new" %> 
      </li>
    </ul>
</header>

<header>
  <ul class="notes">
    <% @product.notes.each do |note| %>       
        <%= link_to note.name, [@product, note] %>      
      <% end %>
  </ul>
</header>
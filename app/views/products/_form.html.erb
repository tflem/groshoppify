<%= bootstrap_form_with(model: product, local: true, label_errors: true) do |form| %>  
  
  <%= form.text_field :name, class: 'mb-2', placeholder: 'Enter the product name' %>
  <%= form.text_field :quantity, placeholder: 'Enter the product quantity' %>
  
  <%= form.submit class: 'mt-4 mb-4 btn btn-dark' %>
<% end %>


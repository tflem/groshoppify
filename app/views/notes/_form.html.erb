<%= bootstrap_form_with(model: [product, note], local: true, label_errors: true) do |form| %>
  
  <%= form.text_field :name, class: 'mb-2', placeholder: 'Enter a note name' %>   
  <%= form.text_area :description, placeholder: 'Enter a note description' %>

  <%= form.submit class: 'mt-4 mb-4 btn btn-dark' %>
<% end %>
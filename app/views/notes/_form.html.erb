<%= form_with(model: [product, note], local: true) do |form| %>
  <% if note.errors.any? %>
    <div id="error_info">
      <h2><%= pluralize(note.errors.count, 'error') %>
      kept this note from being saved:</h2>

      <ul>
        <% note.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>
  <%= form.submit %>
<% end %>